.dropdown
  = link_to t('.perfiles.menu'), '#', class: 'nav-item nav-link dropdown-toggle', data: { toggle: 'dropdown' }
  .dropdown-menu
    - if can? :create, Perfil
      = link_to t('.perfiles.cargar'), new_perfil_path, class: 'dropdown-item'
    = link_to t('.perfiles.ver'), perfiles_path, class: 'dropdown-item'
    = link_to t('.perfiles.exportar'), exportar_perfiles_path, class: 'dropdown-item'
    .dropdown-divider
    %h6.dropdown-header= t('.perfiles.busquedas.menu')
    = link_to t('.perfiles.busquedas.nueva'), new_busqueda_path, class: 'dropdown-item'
    = link_to t('.perfiles.busquedas.guardadas'), busquedas_path, class: 'dropdown-item'

