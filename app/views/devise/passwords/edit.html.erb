  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div><%= f.label :password, "Nuevo password" %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, "ConfirmÃ¡ tu nuevo password" %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Cambiar mi password" %></div>
<% end %>

