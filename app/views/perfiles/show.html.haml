.botonera
  - if can?(:update, @perfil) || can?(:modificar, @perfil)
    = link_to 'Editar', edit_perfil_path(@perfil)
    = '|'
    = link_to 'Permisos', permisos_path(modelo: 'perfil', id: @perfil)
    = '|'
  - if can?(:delete, @perfil)
    = link_to 'Eliminar', @perfil, data: { confirm: t(:confirmar) }, method: :delete
    = '|'
  - if can? :read, @perfil
    = link_to 'Mostrar analÃ­ticos', perfil_analiticos_path(@perfil)
    = '|'
  - if can? :read, @perfil => Adjunto
    = link_to 'Mostrar adjuntos', perfil_adjuntos_path(@perfil)
    = '|'
  = link_to 'Volver', perfiles_path

  = render 'fichas/selector', origen: perfil_path(@perfil)

-# TODO Hacer vista especial para el show (issue #41)
= render @ficha.identificador, perfil: @perfil.decorate, bloqueado: true, mapa: true

= volver_arriba
