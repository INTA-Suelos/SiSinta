#busqueda_perfiles
  = form_tag siguiente_url, method: metodo_de_seleccion, class: 'span-24'

  %table
    %thead
      %tr
        %th.fecha=      link_para_ordenar :fecha,     'Fecha'
        %th.serie=      link_para_ordenar :nombre,    'Serie'
        %th.ubicacion=  link_para_ordenar :ubicacion, 'Ubicación'
        %th.numero=     link_para_ordenar :numero,    'Número'
        %th.modal=      link_para_ordenar :modal,     '¿Es modal?'
        %th.marcar
          #marcar_tag= label_tag 'check_marcar', 'Marcar todo'
          #desmarcar_tag.desaparecer= label_tag 'check_marcar', 'Desmarcar todo'
          = check_box_tag 'check_marcar', true, id: 'check_marcar', checked: true

    %tbody
      = render @perfiles

  .acciones.span-4= submit_tag t('.submit')
