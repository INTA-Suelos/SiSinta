%tr
  %td{colspan: 4}= grupo.descripcion
  %td= grupo.codigo
  %td.acciones
    = link_to 'Mostrar', grupo
    = '|'
    = link_to 'Editar', edit_grupo_path(grupo)
    = '|'
    = link_to 'Eliminar', grupo, method: :delete,
        data: { confirm: "#{t :confirmar} #{grupo.perfiles.any? ? "Esto va a dejar sin grupo a #{pluralize(grupo.perfiles.size, 'perfil')}." : nil } " }
